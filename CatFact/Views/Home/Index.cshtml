@model string

<link href="~/css/formatting.css" type="text/css" rel="stylesheet" />

<body>
    <form asp-action="GetLine" method="post">
        <div class="form-group">
            <label class="basic-label">Kliknij przycisk, aby dodać do pliku nowy fakt o kotach!</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Dodaj nową linijkę" class="btn btn-primary" />
        </div>
        <div class="form-group">
            @if (!string.IsNullOrEmpty(Model))
            {
                <label class="info-label">Dodano: @Model</label>
            }
        </div>
    </form>
</body>